<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="comp3350.plarty">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".presentation.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.CreateEventActivity"
            android:exported="true"
            android:parentActivityName=".presentation.CreateEventActivity"/>
        <activity
            android:name=".presentation.ViewEventsActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.ViewInvitesActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.DailyScheduleActivity"
            android:exported="true"/>
        <activity
            android:name=".presentation.MonthlyScheduleActivity"
            android:exported="true"/>
        <activity android:name=".presentation.UserProfileActivity"
            android:exported="true"/>
        <activity android:name=".presentation.InviteUserActivity"
            android:exported="true"/>
        <activity android:name=".presentation.ViewActiveHoursActivity"
            android:exported="true"/>
    </application>

</manifest>