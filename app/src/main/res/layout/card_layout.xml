<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_margin="5dp"

        app:cardBackgroundColor="@color/color_accent"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp"
        app:contentPadding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <TextView
                    android:id="@+id/card_event_name"
                    android:layout_width="407dp"
                    android:layout_height="51dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="23dp"
                    android:textSize="30sp"
                    android:theme="@style/time_label_text" />

                <ImageView
                    android:id="@+id/delete_event_button"
                    android:layout_width="91dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="52dp"
                    android:layout_toEndOf="@id/card_event_name"
                    android:src="@drawable/ic_delete"
                    android:contentDescription="@string/delete_label" />
            </RelativeLayout>

            <TextView
                android:id="@+id/event_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/event_org"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/invited_users"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="20sp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>